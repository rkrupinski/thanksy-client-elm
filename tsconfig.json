{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es5",
        "jsx": "react",

        "outDir": "./dist/",
        "rootDir": "src/ports/",
        "baseUrl": "./",

        "sourceMap": true,
        "allowSyntheticDefaultImports": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noEmitHelpers": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,

        "types": [ "jest" ],
        "lib": [ "dom", "es2015.promise", "es2015", "esnext"],
    },
    "compileOnSave": true,
    "include": [ "src/**/*.ts"]
}
